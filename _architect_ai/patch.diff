+        let json_start = raw.find('{').unwrap_or(0);
+        let json_end = raw.rfind('}').map(|i| i + 1).unwrap_or(raw.len());
+        serde_json::from_str(&raw[json_start..json_end])
+    }).map_err(|e| anyhow!("JSON parsing error: {}", e))
